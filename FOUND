// I also hav library if need
// class VolTempHyp // creates class VolTempHyp
{
    public static double Celsius; // declares public static double Celsius
    public static double Fahrenheit; // declares public static double Fahrenheit
    public static double radius; // declares public static double radius
    public static double hypotenuse; // declares public static double hypotenuse
    
    public static double fToC(double Fahrenheit) // declares public static double fToC(double Fahrenheit) as a new method
    {
        return (Fahrenheit - 32) * 5/9; // returns the equation to get Fahrenheit to Celsius to the user
    }
    
    public static double cToF(double Celsius) // declares public static double cToF(double Celsius) as a new method
    {
        return Celsius * 9/5 + 32; // returns the equation to get Celsius to Fahrenheit to the user
    }
    
    public static double volume(double radius) // declares public static double volume(double radius) as a new method
    {
        return (Math.PI * 4/3) * Math.pow(radius, 3); // returns the equation to get the volume of a circle to the user
    }
    
    public static double hypotenuse(double small1, double small2)
    {
        return Math.sqrt(Math.pow(small1, 2) + Math.pow(small2, 2)); // returns the equation to the get the hypotenuse of a triangle to the user
    }
}

public class TestConverter // declares public class TestConverter
{
    public static void main(String[] args) // declares the main method in the class
    {
        ConsoleIO console = new ConsoleIO(); // creates a new ConsoleIO object called console
        VolTempHyp convert = new VolTempHyp(); // creates a new VolTempHyp object called convert
        
        System.out.println("Enter Temperature in Fahrenheit:"); // prompts the user to enter a temperature for Fahrenheit
        double Fahrenheit = console.readDouble(); // reads the next double inputted by the user and assigns it to the variable Fahrenheit
        System.out.println("\nAmount in Celsius: " + Format.left(convert.fToC(Fahrenheit), 10, 2)); // tells the user what the temperature will be in Celsius
        
        System.out.println("\nEnter Temperature in Celsius:"); // prompts the user to enter a temperature for Celsius
        double Celsius = console.readDouble(); // reads the next double inputted by the user and assigns it to the varaible Celsius
        System.out.println("\nAmount in Fahrenheit: " + Format.left(convert.cToF(Celsius), 10, 2)); // tells the user what the temperature will be in Fahrenheit
        
        System.out.println("\nEnter the radius of the circle:"); // prompts the user to enter the radius of the circle
        double radius = console.readDouble(); // reads the next double inputted by the user and assigns it to the variable radius
        System.out.println("\nVolume: " + Format.left(convert.volume(radius), 10, 2)); // tells the user what the volume of the circle will be
        
        System.out.println("\nEnter the two smaller sides of the triangle"); // prompts the user to input what the two small sides of the triangle will equal
        double small1 = console.readDouble(); // reads the next double inputted by the user and assigns it to the variable small1
        System.out.println("\nThe first side will be the size of " + small1); // tells the user what they inputted
        double small2 = console.readDouble(); // reads the next double inputted by the user and assigns it to the variable small2
        System.out.println("\nThe second side will be the size of " + small2); // tells the user what they inputted
        System.out.println("\nHypotenuse: " + Format.left(convert.hypotenuse(small1, small2), 10, 2)); // tells the user what the hypotenuse will be
    }
}
